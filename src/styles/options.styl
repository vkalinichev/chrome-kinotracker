*  
	margin 0
	padding 0

html
	background #444
	font-family Segoe UI, Arial, Helvetica, sans-serif
	-webkit-user-drag none
	-webkit-user-select none


body  
	background #f8f8f8 
	background linear-gradient(to bottom, #f8f8f8, #ddd) 
	border 1px solid 
	border-color #aaa #888 #888 #aaa 
	border-radius 10px 
	box-shadow 2px 2px 10px hsla(0,0%,0%, .5) 
	margin 50px auto 
	padding 10px 
	width 250px 
 

button  
	background linear-gradient(to bottom, #aaa, #888) 
	border 1px solid #848484 
	border-radius 3px 
	color #f8f8f8 
	padding 6px 15px 
	position relative 
	text-shadow 0 1px 0 #666 
	margin 0 3px 
	box-shadow 1px 1px 0 hsla(0,0%,100%,.5) inset, -1px -1px 0 hsla(0,0%,100%,.3) inset 
	cursor pointer 
 

	&:hover
		background linear-gradient(to bottom, #b0b0b0, #8e8e8e)
		color #fff
 

	&:active
		background linear-gradient(to bottom, #b8b8b8, #909090)
		top 1px
 

input[type=checkbox]  
	position relative 
	top 2px 
 

input[type=text]  
	padding 0 0 0 5px 
	height 23px 
	width 200px 
 

input[type=text],
select  
	border 1px solid 
	border-color #aaa #ddd #ddd #aaa 
	border-radius 2px 
	font-size .8em 
	position relative 
 

label  
	color #333 
	font-size .8em 
 

select  
	width 208px 
	height 25px 
	top -1px 

 

div#options>div  
	margin 0 auto 
	padding 2px 5px 
	width 220px 
 

div#options  
	margin 0 auto 
	width 220px 
 

div#logo, div#buttons  
	margin-bottom 10px 
	text-align center 
 

div#buttons  
	cursor default 
 

.button

	&_save
		background linear-gradient(to bottom, hsl(120, 50%, 50%), hsl(120, 50%, 40%))

		&:hover
			background linear-gradient(to bottom, hsl(120, 50%, 55%), hsl(120, 50%, 45%))

		&:active
			background linear-gradient(to bottom, hsl(120, 50%, 52%), hsl(120, 50%, 42%))

	&_load
		background linear-gradient(to bottom, hsl(220, 50%, 55%), hsl(220, 50%, 45%))

		&:hover
			background linear-gradient(to bottom, hsl(220, 50%, 60%), hsl(220, 50%, 50%))

		&:active
			background linear-gradient(to bottom, hsl(220, 50%, 57%), hsl(220, 50%, 47%))

	&_reset
		background linear-gradient(to bottom, hsl(20, 50%, 52%), hsl(20, 50%, 42%))

		&:hover
			background linear-gradient(to bottom, hsl(20, 50%, 57%), hsl(20, 50%, 47%))

		&:active
			background linear-gradient(to bottom, hsl(20, 50%, 55%), hsl(20, 50%, 45%))