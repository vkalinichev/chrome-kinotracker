$root = "^[0]"
$font-size = 12px
$font-family = -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif
$shadow-size = 4px
$shadow-color = hsla( black, .1 )
$border-radius = 12px

.kinotracker-bubble
    box-sizing border-box

    position absolute
    left 100%
    bottom 100%
    display block
    z-index 2147483647

    min-height 23px
    transform translateY( -100% )
    margin -4px 4px

    font-family $font-family
    font-size $font-size

    background linear-gradient( to bottom, #fff 35%, #eee 55% )
    border-radius $border-radius
    box-shadow none
    opacity .95

    overflow visible
    transition all .15s ease-in-out

    *, *:before, *:after
        box-sizing inherit

    &:hover
        background linear-gradient( to bottom, #fcfcfc, #f4f4f4 )
        border-radius 0
        box-shadow none
        opacity 1

    &_without-links
        &:hover
            border-radius 0 $border-radius $border-radius 0

    &:after
        content ''
        position absolute
        top 0
        left 0
        right 0
        bottom 0
        border-radius inherit
        box-shadow 0 0 0 .5px hsla( black, .15 ) inset
        pointer-events none

    &__info-wrapper
        position absolute
        top -($shadow-size)
        bottom -($shadow-size)
        overflow hidden
        pointer-events none

        &_left
            left -200px
            right 100%
            white-space nowrap

        &_right
            right auto
            left 100%

    &__info
        position absolute
        top $shadow-size
        height "calc( 100% - %s )" % ($shadow-size*2)

        padding 4px 8px
        text-decoration none

        background white
        color gray
        box-shadow:
            0 0 0 .5px hsla( black, .15 ) inset,
            0 0 $shadow-size 0 transparent

        opacity 0

        transition .2s ease-in-out
        transition-property transform, opacity

        pointer-events initial

        {$root}:hover &
            opacity 1
            box-shadow:
                0 0 0 .5px hsla( black, .2 ) inset,
                0 0 $shadow-size 0 $shadow-color

        &_left
            display inline-block

            max-width 100%
            overflow hidden
            text-overflow ellipsis

            right 0
            border-radius $border-radius 0 0 $border-radius
            transform translateX( 100% )

            {$root}:hover &
                transform translateX( 2px )

        &_right
            position relative
            transform translateX( -100% )
            display flex
            align-items center

            border-radius 0 $border-radius $border-radius 0
            white-space nowrap

            padding 0 6px 1px 4px

            {$root}:hover &
                transform translateX( -2px )

    &__link
        display inline-block
        height 16px
        margin 0 2px
        opacity .9


        transform scale3d( .99, .99, 1 )
        transition .1s 0s ease-in-out
        transition-property opacity, transform

        backface-visibility hidden

        &:hover
            opacity 1
            transform scale3d( 1, 1, 1 )
            transition-timing-function ease-in-out, cubic-bezier( .1, 20, .2, 20 )

    &__header
        display flex
        align-items baseline
        margin-bottom 4px

    &__title
        overflow hidden
        text-overflow ellipsis
        color black
        font-size inherit

    &__name
        color #888
        margin-left 4px

    &__year
        margin-left 4px
        font-size .9em
        color #888

    &__rating
        display inline-block
        padding 4px 6px

        color gray
        text-decoration none
        border-radius inherit
        box-shadow 0 0 $shadow-size 0 transparent
        white-space nowrap

        transition .07s 0s ease-in-out
        transition-property box-shadow, border-radius

        &:hover
            background none
            color lighten( @color, 5% )

        {$root}:hover &
            box-shadow 0 0 $shadow-size 0 $shadow-color

        &_good

            background none
            color #357920

            &:hover
                background none
                color lighten( @color, 10% )

        &_bad

            background none
            color darkred

            &:hover
                background none
                color lighten( @color, 10% )


    &__rating-inner
        margin 0 2px 0 4px

    &__icon
        position relative
        display inline-block

        width 13px
        height @width

        margin-bottom -2px

        background transparent url( 'chrome-extension://__MSG_@@extension_id__/images/logo_48.png' ) center / 100%
