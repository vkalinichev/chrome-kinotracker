$root = "^[0]"
$font-size = 12px
$font-family = -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif

.kinotracker-bubble
    box-sizing border-box

    position absolute
    left 100%
    bottom 100%
    display block
    z-index 2147483647

    min-height 24px
    transform translateY( -100% )
    margin 0

    font-family $font-family
    font-size $font-size

    background linear-gradient( to bottom, #fff 35%, #eee 55% )
    border-radius 3px
    box-shadow none
    opacity .95

    overflow visible
    transition all .2s ease-in-out

    *, *:before, *:after
        box-sizing inherit

    &:hover
        background linear-gradient( to bottom, #fcfcfc, #f4f4f4 )
        border-radius 0
        box-shadow none
        opacity 1

    &:after
        content ''
        position absolute
        top 0
        left 0
        right 0
        bottom 0
        border-radius inherit
        box-shadow 0 0 0 .5px hsla( black, .2 ) inset
        pointer-events none

    &__info-wrapper
        position absolute
        top 0
        bottom 0
        overflow hidden

        &_left
            left -200px
            right 100%
            white-space nowrap

        &_right
            right auto
            left 100%

    &__info
        position absolute
        top 0
        height 100%

        padding 4px 8px
        text-decoration none

        background white
        color gray
        box-shadow 0 0 0 .5px hsla( black, .2 ) inset

        opacity 0

        transition .2s ease-in-out
        transition-property transform, opacity

        {$root}:hover &
            opacity 1

        &_left
            display inline-block

            max-width 100%
            overflow hidden
            text-overflow ellipsis

            right 0
            border-radius 3px 0 0 3px
            transform translateX( 100% )

            {$root}:hover &
                transform translateX( 1px )

        &_right
            position relative
            transform translateX( -100% )
            display flex
            align-items center

            border-radius 0 3px 3px 0
            white-space nowrap

            padding 0 4px

            {$root}:hover &
                transform translateX( -1px )

    &__link
        display inline-block
        height 16px
        margin 0 2px
        opacity .9


        transform scale3d( .99, .99, 1 )
        transition .1s 0s ease-in-out
        transition-property opacity, transform

        //will-change opacity, transform
        backface-visibility hidden

        &:hover
            opacity 1
            transform scale3d( 1, 1, 1 )
            transition-timing-function ease-in-out, cubic-bezier( .1, 20, .2, 20 )

    &__header
        margin-bottom 4px

    &__title
        color black
        font-size inherit

    &__name
        color #888
        margin-left 4px

    &__year
        margin-left 4px
        font-size .8em
        color #888

    &__rating
        display inline-block
        padding 4px 6px

        color gray
        text-decoration none

        &:hover
            background none
            color lighten( #888, 5% )

        &_good

            background none
            color #357920

            &:hover
                background none
                color lighten( #357920, 5% )

        &_bad

            background none
            color darkred

            &:hover
                background none
                color lighten( #ff0b0b, 5% )
