@import "shared/animations"

.kinotracker
    position relative
    display inline-block

    top -1px
    margin 0 0 -4px 4px
    padding 3px 3px 3px 8px

    cursor default
    animation bounceIn 1.3s infinite


    &:before
        content ''

        position absolute
        top 0
        left 0
        right 0
        bottom 0

        background-color #ff4e00
        border-radius 3px

        animation bounceIn 1.3s



    &__link
        position relative
        display inline-block

        margin 0
        padding 2px

        color hsl(200, 100%, 35%)
        text-decoration none
        opacity .9
        background hsla(0,0%,100%,.85)
        border-radius 2px

        vertical-align middle

        & + &
            margin 0 0 0 3px

        &:hover
            background hsla(0,0%,100%,1)
            color hsl(200, 100%, 50%)
            opacity 1


    &__img
        width 16px
        height 16px


    &__marker
        background hsla(55, 100%, 50%, .3)
        border-radius 5px
        box-shadow inset 0 0 0 1px hsla(55, 100%, 45%, 0.3)
        margin 0 -3px
        padding 3px


    &__label
        position relative
        display inline-block

        margin 0 5px 0 0

        color #fff
        font 13px/1.3 Tahoma, Arial, sans-serif
        vertical-align middle
