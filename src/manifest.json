{
    "name": "KinoTracker",
    "description": "Kinopoisk + RuTracker",
    "author": "Vladimir Kalinichev",

    "manifest_version": 2,

    "default_locale": "ru",

    "content_scripts": [{
        "matches": [
            "http://www.kinopoisk.ru/film/*",
            "http://rutracker.org/forum/tracker.php?*",
            "http://tapochek.net/tracker.php?*"
        ],
        "css": [
            "kinotracker.css"
        ],
        "js": [
            "jquery.js",
            "app.js"
        ]
    }
    ],
    "background": {
        "page": "background.html"
    },
    "icons": {
        "48": "images/logo_48.png",
        "128": "images/logo_128.png"
    },
    "options_page": "options.html",

    "browser_action": {
        "default_title": "KinoTracker",
        "default_icon": "images/popup_button.png",
        "default_popup": "popup.html"
    },

    "version": "0.8.3"
}